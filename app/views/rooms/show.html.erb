<div class="count-down">
  <div class="container">
    <div class="well">
      <div class="counter" id="clockdiv">
        <span class="title">Next Chat Session</span>
           <div class="sq">
              <span class="minutes bord">40</span> <span class="smalltext">Mins</span>
           </div>
           <div class="sq">
              <span class="seconds bord">45</span> <span class="smalltext">Secs</span>
           </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="container">
    
    <div class="col-sm-7 chat-image-box">
      <div class="chat-image-2">
        <%= image_tag asset_path("image") %>

      </div>
    </div>
    <div class="col-sm-5">
      <section class="room-chat">
        <div class="message-area">
          <% @messages.each do |message| %>
            <%= render 'rooms/message', message: message %>
          <% end %>
        </div>

        <div class="message-form">
          <%= form_for @message, url: room_messages_path(@room), remote: true, authencity_token: true do |f| %>
            <div class="form-group">
              <%= f.text_area :content, class: 'form-control', placeholder: 'Message...' %>
            </div>
          <% end %>
        </div>

      <%= hidden_field_tag :room_id, @room.id, id: 'room-id' %>
      <%= hidden_field_tag :first_message_id, @messages&.first&.id, id: 'first-message-id' %>
    </section>
  </div>
  </div>
</div>